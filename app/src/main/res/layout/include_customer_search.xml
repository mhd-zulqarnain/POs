<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvSearchCustomer"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_8dp"
>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00A652"
                android:textColor="@color/white"
                android:text="@string/add_customer"
                android:id="@+id/btnAddCustomer"
                android:textSize="@dimen/text_12"
                android:padding="@dimen/margin_3dp"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_gravity="end"
        />
        <androidx.appcompat.widget.SearchView
                android:id="@+id/svSearch"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:hint="@string/search_product"
                android:layout_weight="2.5"
                android:textColorHint="@color/text_light_gry"
                android:textSize="@dimen/text_14"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="@string/existing_customers"
                android:textSize="@dimen/text_14"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_gravity="start"
        />
<ListView android:layout_width="match_parent"
          android:layout_height="@dimen/margin_150dp"
android:id="@+id/lsCustomer"
/>
    </LinearLayout>

