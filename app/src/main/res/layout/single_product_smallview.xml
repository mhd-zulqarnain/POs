<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rlMain"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_2dp"
                android:background="#cb7520"
                android:layout_margin="@dimen/margin_5dp"

>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cb7520"

        >

            <ImageView
                    android:id="@+id/product_item_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:src="@drawable/no_image"
                    android:layout_gravity="center"/>


            <TextView
                    android:background="#c49b6d"
                    android:id="@+id/product_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_item_icon"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:gravity="center"
                    android:text="Title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13"
                    android:textStyle="bold"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
