<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/cvCalculator"
        android:background="@color/white"
        android:layout_margin="@dimen/margin_10dp"
        android:visibility="visible"

>

    <Button
            android:text="-2%"
            style="@style/CalBtnStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_two_per"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline17"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline10"
                                                android:orientation="horizontal" app:layout_constraintGuide_percent="0.833"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline14"
                                                android:orientation="horizontal" app:layout_constraintGuide_percent="0.4988"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline16"
                                                android:orientation="horizontal" app:layout_constraintGuide_percent="0.6664"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline4"
                                                android:orientation="horizontal" app:layout_constraintGuide_percent="0.1666"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline6"
                                                android:orientation="horizontal" app:layout_constraintGuide_percent="0.332"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline17"
                                                android:orientation="vertical" app:layout_constraintGuide_percent="0.333"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline18"
                                                android:orientation="vertical" app:layout_constraintGuide_percent="0.666"/>
    <Button
            android:text="-5%"
            style="@style/CalBtnStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_five_per"
            app:layout_constraintTop_toTopOf="@+id/guideline4" app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintEnd_toStartOf="@+id/guideline18" app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"/>
    <Button
            android:text="%"
            style="@style/CalBtnStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_percent"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:layout_constraintBottom_toTopOf="@+id/guideline6" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_five_per"
    />
    <Button
            android:text="7"
            style="@style/CalBtnStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_seven"
            app:layout_constraintBottom_toTopOf="@+id/guideline14" app:layout_constraintEnd_toStartOf="@+id/guideline17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_two_per"/>
    <Button
            android:text="8"
            style="@style/CalBtnStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            app:layout_constraintBottom_toTopOf="@+id/guideline14" app:layout_constraintEnd_toStartOf="@+id/guideline18"
            android:id="@+id/btn_eight"/>
    <Button
            android:text="4"
            style="@style/CalBtnStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_four"
            app:layout_constraintBottom_toTopOf="@+id/guideline16" app:layout_constraintEnd_toStartOf="@+id/guideline17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline14"/>
    <Button
            android:text="5"
            style="@style/CalBtnStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_five"
            app:layout_constraintTop_toTopOf="@+id/guideline14"
            app:layout_constraintBottom_toTopOf="@+id/guideline16"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintEnd_toStartOf="@+id/guideline18"/>
    <Button
            android:text="1"
            style="@style/CalBtnStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_one" app:layout_constraintEnd_toStartOf="@+id/guideline17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline10"
            app:layout_constraintTop_toTopOf="@+id/guideline16"/>
    <Button
            android:text="2"
            style="@style/CalBtnStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_two" app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintTop_toTopOf="@+id/guideline16"
            app:layout_constraintBottom_toTopOf="@+id/guideline10" app:layout_constraintEnd_toStartOf="@+id/guideline18"
    />
    <Button
            android:text="9"
            style="@style/CalBtnStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@+id/guideline18"
            app:layout_constraintBottom_toTopOf="@+id/guideline14"
            app:layout_constraintTop_toTopOf="@+id/guideline6" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_nine"/>
    <Button
            android:text="6"
            style="@style/CalBtnStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_six" app:layout_constraintStart_toStartOf="@+id/guideline18"
            app:layout_constraintBottom_toTopOf="@+id/guideline16"
            app:layout_constraintTop_toTopOf="@+id/guideline14" app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="3"
            style="@style/CalBtnStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_three"
            app:layout_constraintStart_toStartOf="@+id/guideline18" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline10"
            app:layout_constraintTop_toTopOf="@+id/guideline16"/>
    <Button
            style="@style/CalBtnStyle"
            android:layout_width="0dp"
            android:id="@+id/btn_done"
            app:layout_constraintTop_toTopOf="@+id/guideline10" app:layout_constraintStart_toStartOf="@+id/guideline18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_height="0dp" android:text="Done"/>
    <Button
            android:text="."
            style="@style/CalBtnStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_point" app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintTop_toTopOf="@+id/guideline10"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline18"
    />
    <Button
            android:text="0"
            style="@style/CalBtnStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_zero" app:layout_constraintEnd_toStartOf="@+id/guideline17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline10"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout android:layout_marginStart="8dp"
                  android:layout_height="121dp"
                  android:layout_width="0dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toTopOf="@+id/guideline4"
                  android:orientation="horizontal"
                  android:gravity="center"
    >
        <TextView
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="121dp"
                android:paddingLeft="@dimen/margin_20dp"
                android:textSize="@dimen/text_20"
                android:layout_weight="1"
                android:id="@+id/tvCalTotal"
        />
        <ImageButton android:layout_width="@dimen/margin_100dp"
                     android:layout_height="@dimen/margin_100dp"
                     android:background="@null"
                     android:src="@drawable/calc_backspace"
                     android:id="@+id/btnErase"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>