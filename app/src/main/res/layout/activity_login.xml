<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.LoginActivity"
        android:background="@color/colorPrimary">

    <ImageView
            android:src="@drawable/logo"
            android:layout_width="@dimen/margin_165dp"
            android:layout_height="@dimen/margin_100dp"
            android:id="@+id/img_logo_sign_in"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_8dp"
            android:contentDescription="@string/logo"
            android:layout_marginBottom="@dimen/margin_8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" app:layout_constraintVertical_bias="0.027"
            app:layout_constraintHorizontal_bias="0.52"/>

    <EditText
            android:imeOptions="actionNext"
            android:layout_width="@dimen/margin_300dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:layout_height="@dimen/margin_40dp"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/text_15"
            android:hint="@string/mobile_no"
            android:maxLines="1"
            android:id="@+id/et_mobile_sign_in"
            app:backgroundTint="@android:color/white"
            android:drawableTint="@android:color/white"
            tools:targetApi="m"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/img_logo_sign_in" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.528"/>

    <EditText
            android:imeOptions="actionDone"
            android:layout_width="@dimen/margin_300dp"
            android:layout_height="@dimen/margin_40dp"
            android:inputType="textPassword"
            android:textSize="@dimen/text_15"
            android:hint="@string/password"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:drawableTint="@android:color/white"
            android:maxLines="1"
            android:id="@+id/et_password_sign_in"
            tools:targetApi="m"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/et_mobile_sign_in" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/btn_login_sign_in"
            android:layout_marginBottom="8dp" app:layout_constraintHorizontal_bias="0.528"
            app:layout_constraintVertical_bias="0.05"/>

    <Button
            android:background="@drawable/bg_box_white_border"
            android:text="@string/login"
            android:layout_width="@dimen/margin_300dp"
            android:layout_height="@dimen/margin_30dp"
            android:id="@+id/btn_login_sign_in"
            android:textSize="@dimen/text_12"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/imageView3"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.528" android:layout_marginTop="212dp"
            app:layout_constraintTop_toBottomOf="@+id/et_mobile_sign_in"/>

    <TextView
            android:text="@string/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_13"
            android:textColor="#fff"
            android:id="@+id/btn_forget_pass_sign_in"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_login_sign_in" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.531"/>
    <ImageView
            android:src="@drawable/city"
            android:layout_width="match_parent"
            android:layout_height="351dp"
            android:id="@+id/imageView3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitXY"
            android:contentDescription="@string/bg_city"/>

</android.support.constraint.ConstraintLayout>


