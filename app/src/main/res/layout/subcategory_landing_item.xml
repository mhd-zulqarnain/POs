<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_light_gry"
    android:paddingLeft="@dimen/margin_2dp"
    android:paddingTop="@dimen/margin_2dp"
    android:paddingRight="@dimen/margin_2dp"
    android:paddingBottom="@dimen/margin_2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/margin_5dp"
            android:paddingTop="@dimen/margin_5dp"
            android:paddingRight="@dimen/margin_5dp"
            android:paddingBottom="@dimen/margin_5dp">

            <ImageView
                android:id="@+id/category_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_150dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/category_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_item_icon"
                android:ellipsize="end"
                android:hint="kitkat 70% dark"
                android:maxLines="2"
                android:minLines="2"
                android:padding="@dimen/margin_5dp"
                android:text="Title"
                android:textSize="@dimen/text_13"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/store_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/category_item_title"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_5dp"
                    android:paddingTop="@dimen/margin_2dp"
                    android:paddingRight="@dimen/margin_5dp">


                    <LinearLayout
                        android:id="@+id/category_item_weight_price_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|left"
                        android:layout_marginLeft="@dimen/margin_2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/category_item_weight_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top|left"
                            android:hint="(20 gms)"
                            android:textColor="@color/text_light_gry"
                            android:textSize="@dimen/text_11" />


                        <ImageView
                            android:id="@+id/product_weight_range"
                            android:layout_width="@dimen/margin_30dp"
                            android:layout_height="@dimen/margin_30dp"
                            android:layout_gravity="top|left"
                            android:background="@drawable/down_arrow_orange"
                            android:visibility="gone" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/category_item_new_price"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/margin_5dp"
                                android:hint="90 AED"
                                android:textSize="@dimen/text_12" />

                            <TextView
                                android:id="@+id/category_item_old_price"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/margin_20dp"
                                android:hint="20 AED"
                                android:textColor="@color/text_light_gry"
                                android:textSize="@dimen/text_11" />
                        </LinearLayout>

                        <!--old location of product sizes-->

                        <LinearLayout
                            android:id="@+id/smallAddButtonLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/category_additems"
                                android:layout_width="@dimen/margin_20dp"
                                android:layout_height="@dimen/margin_20dp"
                                android:layout_gravity="right"
                                android:background="@drawable/add_items"
                                android:visibility="visible" />

                            <include layout="@layout/cart_count_inflator" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
