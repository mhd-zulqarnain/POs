<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:context=".view.customer.CustomerSummeryFragment">

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline9"
                                                android:orientation="vertical" app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline15"
                                                android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline24"
                                                android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline26"
                                                android:orientation="vertical" app:layout_constraintGuide_percent="0.9"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline21"
                                                android:orientation="horizontal" app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline23"
                                                android:orientation="horizontal" app:layout_constraintGuide_percent="0.9"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline22"
                                                android:orientation="horizontal" app:layout_constraintGuide_percent="0.1"/>
    <Button
            android:text="Button"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonTitle" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline22" app:layout_constraintBottom_toTopOf="@+id/guideline21"
            android:layout_marginBottom="8dp"
            android:background="#009688"
            app:layout_constraintEnd_toStartOf="@+id/guideline15"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline9"
            android:layout_marginStart="8dp"/>
    <Button
             android:text="Button"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#673AB7"
            android:id="@+id/button2" app:layout_constraintEnd_toStartOf="@+id/guideline26"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline24"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline22" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button6"/>
    <Button
             android:text="Button"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button5" android:layout_marginTop="8dp"
            android:background="#2196F3"
            app:layout_constraintTop_toTopOf="@+id/guideline21" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline23"
            app:layout_constraintStart_toStartOf="@+id/guideline9" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline15" android:layout_marginEnd="8dp"/>
    <Button
             android:text="Button"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#01579B"
            android:id="@+id/button6" app:layout_constraintStart_toStartOf="@+id/guideline24"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline21" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline23" app:layout_constraintEnd_toStartOf="@+id/guideline26"
            android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>