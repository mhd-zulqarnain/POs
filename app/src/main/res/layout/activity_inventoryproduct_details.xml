<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/colorPrimaryDark"
        tools:context=".view.inventory.InventoryProductDetails">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/primaryColortheme"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/no_image"
                android:padding="0dp"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_gravity="end"/>

    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="@dimen/margin_3dp"
            app:cardCornerRadius="@dimen/margin_10dp"
            android:layout_margin="@dimen/margin_15dp"
            android:background="@drawable/bg_box_grey" android:id="@+id/cardView">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">


            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content" android:id="@+id/guideline"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_percent=".45"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content" android:id="@+id/guideline2"
                                                  android:orientation="horizontal"
                                                  app:layout_constraintGuide_percent="0.11"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:orientation="horizontal" android:id="@+id/linearLayout3"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                    app:layout_constraintStart_toEndOf="@+id/iv_prd_img" android:layout_marginStart="20dp"
                    app:layout_constraintVertical_bias="0.0">

                <TextView
                        android:id="@+id/prd_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdsadasd"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_15dp"
                        android:textSize="@dimen/text_18"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10dp"
                    android:background="@drawable/bg_border_light_grey" android:id="@+id/linearLayout5"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@+id/guideline2" android:layout_marginBottom="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Variants"
                        android:textSize="@dimen/text_18"
                        android:layout_margin="@dimen/margin_10dp"/>

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/rc_product_details_variants"
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/margin_10dp"
                        android:layout_height="match_parent"
                />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/bg_light_grey_border_only"
                    app:layout_constraintTop_toTopOf="@+id/guideline2" android:id="@+id/linearLayout6"
                    app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="20dp"
                    android:layout_marginBottom="8dp">

                <LinearLayout
                        android:id="@+id/container_Ll_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/margin_30dp"
                        android:layout_marginRight="@dimen/margin_30dp"
                >

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:gravity="center"
                                  android:layout_marginTop="@dimen/margin_10dp"
                                  android:weightSum="2"
                    >
                        <TextView
                                android:id="@+id/tv_varaint_title"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Variants"
                                android:layout_weight="1.5"
                                android:textSize="@dimen/text_18"
                                android:gravity="center_vertical"
                        />

                        <Button
                                android:background="?attr/primaryColortheme"
                                android:layout_below="@id/container_Ll_edit"
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="wrap_content"
                                android:text="Update Varaint"
                                android:textSize="@dimen/text_12"
                                android:layout_gravity="end"
                                android:textColor="@color/white"
                                android:textAllCaps="false"
                        />
                    </LinearLayout>


                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bar Code:"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_marginBottom="@dimen/margin_5dp"
                            android:textSize="@dimen/text_12"/>

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_bar_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_light_grey_btn"
                            android:hint="@string/bar_code"
                            android:padding="@dimen/margin_10dp"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textSize="@dimen/text_12"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_1dp"
                            android:layout_marginTop="@dimen/margin_15dp"
                            android:layout_marginBottom="@dimen/margin_3dp"
                            android:background="@color/text_light_gry"/>


                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Account Price:"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_marginBottom="@dimen/margin_5dp"
                            android:textSize="@dimen/text_12"/>

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_light_grey_btn"
                            android:hint="@string/account_price"
                            android:padding="@dimen/margin_10dp"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textSize="@dimen/text_12"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_1dp"
                            android:layout_marginTop="@dimen/margin_15dp"
                            android:layout_marginBottom="@dimen/margin_3dp"
                            android:background="@color/text_light_gry"/>


                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Discount:"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_marginBottom="@dimen/margin_5dp"
                            android:textSize="@dimen/text_12"/>

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_light_grey_btn"
                            android:hint="@string/discount"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:padding="@dimen/margin_10dp"

                            android:textSize="@dimen/text_12" android:id="@+id/et_discount"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_1dp"
                            android:layout_marginTop="@dimen/margin_15dp"
                            android:layout_marginBottom="@dimen/margin_3dp"
                            android:background="@color/text_light_gry"/>


                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Current Stock:"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_marginBottom="@dimen/margin_5dp"
                            android:textSize="@dimen/text_12"/>

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_light_grey_btn"
                            android:hint="@string/current_stock"
                            android:padding="@dimen/margin_10dp"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textSize="@dimen/text_12" android:id="@+id/et_stock"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_1dp"
                            android:layout_marginTop="@dimen/margin_15dp"
                            android:layout_marginBottom="@dimen/margin_3dp"
                            android:background="@color/text_light_gry"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Re-Order Limit:"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_marginBottom="@dimen/margin_5dp"
                            android:textSize="@dimen/text_12"/>

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_light_grey_btn"
                            android:hint="@string/order_limit"
                            android:padding="@dimen/margin_10dp"
                            android:maxLines="1"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:textSize="@dimen/text_12" android:id="@+id/et_order_limit"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_1dp"
                            android:layout_marginTop="@dimen/margin_15dp"
                            android:layout_marginBottom="@dimen/margin_3dp"
                            android:background="@color/text_light_gry"/>

                    <Button
                            android:layout_gravity="center"
                            android:id="@+id/btn_add"
                            android:background="?attr/primaryColortheme"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_height="wrap_content"
                            android:text="Add to Inventory"
                            android:padding="@dimen/margin_5dp"
                            android:textSize="@dimen/text_16"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                    />
                </LinearLayout>


            </LinearLayout>
            <ImageView
                    android:layout_width="79dp"
                    android:layout_height="0dp" tools:srcCompat="@tools:sample/backgrounds/scenic[2]"
                    android:id="@+id/iv_prd_img"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline2" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>