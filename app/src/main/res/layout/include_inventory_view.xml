<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="?attr/colorPrimaryDark"

        android:id="@+id/lvInventoryView"
>

<androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline40"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.12"/>
<androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline39"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08"/>


<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/categories"
        android:textSize="@dimen/text_12"
        android:textColor="@color/white"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="@+id/lvInventory"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline39"
        android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline40"/>
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inventory"
        android:translationZ="10dp"
        android:id="@+id/tvInventoryLable"

        android:layout_alignParentBottom="true"
        android:textSize="@dimen/text_12"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:rotation="-90"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline40"
        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/lvInventory"
        android:layout_marginEnd="32dp" android:layout_marginBottom="64dp"
        tools:targetApi="lollipop" />
<androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/primaryLightColorTheme"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline39"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/lvInventory">



</androidx.constraintlayout.widget.ConstraintLayout>

<ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_light_right_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="?attr/primaryLightColorTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lvInventory"/>
</androidx.constraintlayout.widget.ConstraintLayout>
