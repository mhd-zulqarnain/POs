<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/margin_5dp"
        android:id="@+id/cv_product_main"
        android:layout_margin="@dimen/margin_10dp"
        app:cardElevation="@dimen/margin_2dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_15dp"
            android:weightSum="4"

            android:orientation="horizontal">

        <ImageView
                android:id="@+id/img_variant_product_details"
                android:layout_width="0dp"
                android:src="@drawable/no_image"
                android:layout_weight="1"
                android:layout_height="@dimen/margin_100dp"
                android:scaleType="fitXY"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2.7"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal|start">

            <TextView
                    android:id="@+id/tv_variant_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id: 123"
                    android:textSize="@dimen/text_18"/>
            <TextView
                    android:id="@+id/tv_variant_barcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bar Code: 123"
                    android:textSize="@dimen/text_18"/>

            <TextView
                    android:id="@+id/tv_variant_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: 123"
                    android:textSize="@dimen/text_18"/>

            <TextView
                    android:id="@+id/tv_variant_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock: 123"
                    android:textSize="@dimen/text_18"/>

        </LinearLayout>
        <ImageView android:layout_width="0dp"
                   android:id="@+id/iv_edit_icon"
                   android:layout_height="wrap_content"
                   android:layout_weight=".2"
                   android:src="@drawable/edit_icon"/>

    </LinearLayout>
</android.support.v7.widget.CardView>