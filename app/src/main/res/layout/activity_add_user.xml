<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:background="?attr/colorPrimaryDark"
        tools:context=".view.inventory.InventoryProductDetailsActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/primaryColorTheme"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/no_image"
                android:padding="0dp"
                android:layout_margin="@dimen/margin_15dp"
                android:layout_gravity="end"/>

    </androidx.appcompat.widget.Toolbar>


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="@dimen/margin_3dp"
            app:cardCornerRadius="@dimen/margin_10dp"
            android:layout_margin="@dimen/margin_15dp"
            android:background="@drawable/bg_box_grey" android:id="@+id/cardView">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1" app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintEnd_toStartOf="@+id/guideline">


            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content" android:id="@+id/guideline"
                                                        android:orientation="vertical"
                                                        app:layout_constraintGuide_percent="0.5"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content" android:id="@+id/guideline2"
                                                        android:orientation="horizontal"
                                                        app:layout_constraintGuide_percent="0.06"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:orientation="horizontal" android:id="@+id/linearLayout3"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/constarint4"
                    app:layout_constraintStart_toEndOf="@+id/iv_prd_img" android:layout_marginStart="20dp"
                    app:layout_constraintVertical_bias="0.0">

                <TextView
                        android:id="@+id/prd_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_15dp"
                        android:textSize="@dimen/text_18"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10dp"
                    android:background="@drawable/bg_border_light_grey" android:id="@+id/constarint4"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@+id/guideline2" android:layout_marginBottom="20dp">
                <Button
                        android:layout_gravity="end"
                        android:id="@+id/btn_add"
                        android:background="?attr/primaryColorTheme"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_marginBottom="@dimen/margin_5dp"
                        android:layout_height="30dp"
                        android:text="@string/add_user"
                        android:layout_marginEnd="@dimen/margin_30dp"
                        android:padding="@dimen/margin_5dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"/>
                <LinearLayout
                        android:id="@+id/container_Ll_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/margin_30dp"
                        android:layout_marginRight="@dimen/margin_30dp">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/store_code"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_marginBottom="@dimen/margin_5dp"
                            android:textSize="@dimen/text_12"/>

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_store_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_light_grey_btn"
                            android:hint="@string/store_code"
                            android:padding="@dimen/margin_10dp"
                            android:maxLines="1"
                            android:focusable="false"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textSize="@dimen/text_12"/>

                    <View android:layout_width="match_parent"
                          android:layout_height="@dimen/margin_1dp"
                          android:layout_marginTop="@dimen/margin_15dp"
                          android:layout_marginBottom="@dimen/margin_3dp"
                          android:background="@color/text_light_gry"/>


                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/user_code"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_marginBottom="@dimen/margin_5dp"
                            android:textSize="@dimen/text_12"/>

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_user_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_light_grey_btn"
                            android:hint="@string/user_code"
                            android:padding="@dimen/margin_10dp"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textSize="@dimen/text_12"/>

                    <View android:layout_width="match_parent"
                          android:layout_height="@dimen/margin_1dp"
                          android:layout_marginTop="@dimen/margin_15dp"
                          android:layout_marginBottom="@dimen/margin_3dp"
                          android:background="@color/text_light_gry"/>


                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/password"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_marginBottom="@dimen/margin_5dp"
                            android:textSize="@dimen/text_12"/>


                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:textSize="@dimen/text_12"
                            app:passwordToggleEnabled="true"
                    >

                        <EditText
                                android:id="@+id/et_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_light_grey_btn"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:padding="@dimen/margin_10dp"
                                android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout android:layout_width="0dp"
                          android:layout_height="0dp"
                          android:orientation="vertical"
                          android:background="@drawable/bg_light_themed_border_only"

                          android:id="@+id/constraintsecond" android:layout_marginEnd="8dp"
                          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/guideline2"
                          android:layout_marginBottom="20dp" app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintStart_toEndOf="@+id/constarint4" android:layout_marginStart="8dp">


                <TextView
                        android:id="@+id/tv_varaint_prd_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_15dp"
                        android:layout_margin="@dimen/margin_10dp"
                        android:textSize="@dimen/text_18"/>
                <CheckBox
                        android:text="@string/admin"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/margin_50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_20dp"
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:id="@+id/cbAdmin"/>
                <CheckBox
                        android:text="@string/procurement"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_20dp"
                        android:layout_marginLeft="@dimen/margin_20dp"

                        android:id="@+id/cbProc"/>
                <CheckBox
                        android:text="@string/sales"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_20dp"
                        android:layout_marginLeft="@dimen/margin_20dp"
android:checked="true"
                        android:id="@+id/cbSales"/>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>